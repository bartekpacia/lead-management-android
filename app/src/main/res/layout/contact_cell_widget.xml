<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:id="@+id/contact_layout_widget">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/contact_avatar_widget"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/temp_name">

        <TextView
                android:id="@+id/contact_name_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxLines="1" tools:text="@tools:sample/full_names"
                android:textColor="#121212"
                android:textSize="18sp"
                android:textAllCaps="false"/>

        <TextView
                android:id="@+id/contact_number_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:maxLines="1" tools:text="@tools:sample/us_phones"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>